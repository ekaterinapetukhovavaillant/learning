generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  wallets   Wallet[]
}

enum Currency {
  EUR
  BYN
  PLN
  USD
  CUP
}

model Wallet {
  id       String   @id @default(uuid())
  amount   Decimal  @default(0)
  currency Currency
  owner    User     @relation(fields: [ownerId], references: [id])
  ownerId  String

  @@unique([ownerId, currency])
}

model CurrenciesExchange {
  from String
  to   String
  rate Decimal

  @@id([from, to])
}
