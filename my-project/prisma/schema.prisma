generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  wallets   Wallet[]
}

model Wallet {
  id       String  @id @default(uuid())
  amount   Decimal @default(0)
  currency String
  owner    User    @relation(fields: [userId], references: [id])
  userId   String

  @@unique([userId, currency])
}
